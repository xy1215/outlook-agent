# ===== Canvas =====
# Canvas 可选；留空则跳过 Canvas API，改为邮件解析为主
CANVAS_BASE_URL=https://your-school.instructure.com
CANVAS_TOKEN=your_canvas_access_token

# ===== Microsoft Graph (Outlook) =====
MS_TENANT_ID=your_tenant_id
MS_CLIENT_ID=your_client_id
MS_CLIENT_SECRET=your_client_secret
MS_USER_EMAIL=you@school.edu

# ===== Push (Pushover, iPhone) =====
PUSH_PROVIDER=pushover
PUSHOVER_APP_TOKEN=your_pushover_app_token
PUSHOVER_USER_KEY=your_pushover_user_key

# ===== Scheduler =====
SCHEDULE_TIME=07:30
TIMEZONE=America/Los_Angeles

# ===== Agent =====
DIGEST_LOOKAHEAD_DAYS=3
IMPORTANT_KEYWORDS=urgent,important,deadline,exam,quiz,project
