# ===== Canvas =====
# 待办任务来源：Canvas Calendar feed
CANVAS_BASE_URL=https://your-school.instructure.com
CANVAS_TOKEN=your_canvas_access_token
CANVAS_CALENDAR_FEED_URL=
CANVAS_FEED_CACHE_PATH=data/canvas_feed_cache.json
CANVAS_FEED_REFRESH_HOURS=24

# ===== Microsoft Graph (Outlook) =====
MS_TENANT_ID=your_tenant_id
MS_CLIENT_ID=your_client_id
MS_CLIENT_SECRET=your_client_secret
MS_USER_EMAIL=you@school.edu
MS_REDIRECT_URI=http://127.0.0.1:8000/auth/callback
MS_TOKEN_STORE_PATH=data/ms_token.json

# ===== Push (Pushover, iPhone) =====
PUSH_PROVIDER=pushover
PUSHOVER_APP_TOKEN=your_pushover_app_token
PUSHOVER_USER_KEY=your_pushover_user_key

# ===== Scheduler =====
SCHEDULE_TIME=07:30
TIMEZONE=America/Los_Angeles

# ===== Agent =====
DIGEST_LOOKAHEAD_DAYS=3
IMPORTANT_KEYWORDS=urgent,important,deadline,exam,quiz,project
TASK_REQUIRE_DUE=true
PUSH_DUE_WITHIN_HOURS=48
PUSH_PERSONA=auto

# ===== LLM Mail Classification =====
# 设置后启用邮件三分类 + Canvas feed 任务过滤；留空时使用规则兜底
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=
LLM_MODEL=
LLM_TIMEOUT_SEC=12
LLM_MAX_PARALLEL=6
LLM_MAIL_ENABLED=false
LLM_MAIL_MAX_CALLS_PER_RUN=8
LLM_CANVAS_MAX_CALLS_PER_RUN=24
LLM_FAIL_FAST_THRESHOLD=3
LLM_CACHE_TTL_HOURS=72
LLM_MAIL_CACHE_PATH=data/llm_mail_cache.json
LLM_CANVAS_CACHE_PATH=data/llm_canvas_cache.json
